---
const { href, text } = Astro.props;
---

<button class="primarybutton">
  <a href={href}>{text}</a>
</button>

<style>
  .primarybutton {
    padding: var(--spacing-horisontal-button) var(--spacing-medium);
    border: none;
    justify-content: center;
    align-items: center;
    border-radius: var(--spacing-small);
    background-color: var(--color-background-primarybutton-default);
    display: block;
    margin-top: var(--spacing-vertical-xsmall);
  }

  .primarybutton a {
    text-decoration: none;
    color: var(--color-text-primarybutton-default);
  }

  .primarybutton:hover {
    background-color: var(--color-background-primarybutton-hover);
  }

  .primarybutton:hover a {
    color: var(--color-text-primarybutton-hover);
  }
</style>
