<script src="../scripts/burger.js"></script>

<style>
  #mainmenu {
    width: 100%;
    display: flex;
    position: fixed;
    align-items: center;
    background-color: transparent;
    justify-content: space-between;
    z-index: 10;
  }

  .logo img {
    width: 60%;
    height: 100%;
    padding-inline-start: var(--spacing-xxsmall);
  }

  #menu {
    display: flex;
    text-wrap: nowrap;
    align-items: center;
    gap: var(--spacing-gap-gap);
    padding: var(--spacing-xxsmall);
  }

  a {
    text-decoration: none;
    color: var(--color-text-linkbutton-default);
  }

  a:hover {
    color: var(--color-text-linkbutton-hover);
  }
  /*.logo_burgermenu {
    display: none;
  }

  /*mobil*/

  @media (max-width: 700px) {
    #menu {
      display: flex;
      flex-direction: column;
      text-align: center;
      align-items: center;
      width: 100%;
    }

    .logo img {
      padding: 0;
    }

    #burger-menu {
      border: none;
      cursor: pointer;
      z-index: 3;
    }

    #burger-menu span,
    #burger-menu span:before,
    #burger-menu span:after {
      background: var(--color-red-300);
      display: block;
      height: 4px;
      position: absolute;
      transition: 0.3s ease-in-out;
      content: "";
    }
    #burger-menu span:before {
      left: 0px;
      top: -10px;
      width: 55px;
    }
    #burger-menu span {
      right: 10px;
      top: 25px;
      width: 55px;
    }
    #burger-menu span:after {
      left: 0px;
      top: 10px;
      width: 55px;
    }
    #burger-menu.close span:before {
      top: 0px;
      transform: rotate(65deg);
      width: 65px;
      background: var(--color-red-300);
    }
    #burger-menu.close span {
      transform: rotate(-32deg);
      top: 25px;
      right: 10px;
      width: 65px;
      background: var(--color-red-300);
    }
    #burger-menu.close span:after {
      top: 0px;
      left: 0;
      transform: rotate(65deg);
      opacity: 0;
      width: 0;
      background: var(--color-red-300);
    }
    #menu {
      min-width: 100%;
      min-height: 100%;
      visibility: hidden;
      text-align: center;
      z-index: 1;
      opacity: 0;
      transition: all 0.3s ease-in-out;
    }
    #menu.overlay {
      visibility: visible;
      opacity: 10;
      padding-top: 100px;
      padding-bottom: 800px;
      background: var(--color-background-body-body);
    }

    #menu a {
      list-style: none;
      display: block;
      visibility: visible;
      z-index: 3000;
    }
  }
</style>
