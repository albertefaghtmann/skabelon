---
const { href, text } = Astro.props;
---

<button class="secondarybutton">
  <a href={href}>{text}</a>
</button>

<style>
  .secondarybutton {
    display: inline-flex;
    padding: var(--spacing-horisontal-button) var(--spacing-medium);
    justify-content: center;
    align-items: center;
    background-color: transparent;
    border-radius: var(--spacing-small);
    border: 3px solid var(--color-gray-50);
  }

  .secondarybutton a {
    text-decoration: none;
    color: var(--color-text-secondarybutton-hover);
  }
  .secondarybutton:hover {
    background-color: var(--color-gray-20);
  }

  .secondarybutton:hover a {
    color: var(--color-text-primarybutton-hover);
  }
</style>
