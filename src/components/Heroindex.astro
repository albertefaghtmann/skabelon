<style>
  .billede {
    height: 50%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    position: flex;
    width: 100%;
  }

  .grid-container {
    display: flex;
    justify-content: space-between;
  }

  .tekst {
    transform: translate(30%, -150%);
  }
  .form {
    text-align: center;
    transform: translate(30%, -150%);
  }
</style>
