import Form from "../components/Form.astro";
import Header from "./Header.astro";
---

<section>
  <Header />
  <div>
    <img class="billede" src="/assets/images/herobillede_index.webp" alt="" />
    <div class="grid-container">
      <div class="tekst">
        <p>KAMPAGNE</p>
        <h2>Skriv under og v√¶r med i kampen for en global plastiktraktat</h2>
      </div>
      <div class="form">
