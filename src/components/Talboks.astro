---
const { text, text2 } = Astro.props;
---

<section>
  <div class="faktaboks_rund">
    <h2>{text}</h2>
  </div>
  <p class="faktap">{text2}</p>
</section>

<style>
  section {
    max-width: 100%;
  }
  .faktaboks_rund {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 110px;
    height: 110px;
    border-radius: 50%;
    background: var(--color-background-bokse-bokse);
  }

  /*button text small*/
  .faktap {
    color: var(--color-text-heading-heading);
    line-height: 1.4rem;
    width: 80%;
    color: var(--color-blue-100);
    padding-top: var(--spacing-xxsmall);
  }

  @media (max-width: 700px) {
    .faktaboks_rund {
      width: 50px;
      height: 50px;
    }

    .faktap {
      font-size: 10px;
      line-height: 1.2rem;
      width: 70%;
    }
  }
</style>
