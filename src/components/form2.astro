---
import Primarybutton from "./Primarybutton.astro";
---

<section class="form2">
  <h3>Gør en forskel!</h3>
  <div class="text_input">
    <div class="navn_input">
      <label for="navn"><br />Navn<br /></label>
      <input type="email" id="navn" name="navn" placeholder="Eksempel" required />
    </div>
    <div class="mail_input">
      <label for="mail"><br />Mail<br /></label>
      <input type="text" id="mail" name="mail" placeholder="eksempel@mail.nu" required />
    </div>
  </div>
  <label class="checkboks">
    <input type="checkbox" checked="checked" />
    Accepter vilkår og <p class="underline">betingelser</p>*
    <span class="checkmark"></span>
  </label>

  <label class="checkboks">
    <input type="checkbox" />
    Modtag Plastic Changes nyhedsbrev
    <span class="checkmark"></span>
  </label>

  <Primarybutton href="/" text="Skriv under" />
</section>

<style>
  .form2 {
    display: flex;
    width: 370px;
    height: 430px;
    padding: var(--spacing-medium, 40px) 0px;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    border-radius: 30px;
    background: var(--color-background-form);
  }

  .text_input .navn_input,
  .text_input .mail_input {
    text-align: start;
  }

  .text_input input {
    width: 300px;
    height: 40px;
    padding: 0px 10px;
    background-color: transparent;
    color: var(--color-gray-20);
    border-radius: 3px;
    border: 2px solid var(--color-gray-20);
  }

  .text_input input:focus {
    outline: 2px solid #0048d9;
    border-radius: 3px;
  }

  .text_input label {
    color: var(--color-gray-20);
    font-family: "Rubik";
    font-size: 16px;
  }

  /*checkbox */

  .underline {
    color: var(--color-red-300);
    display: inline;
    font-family: "Rubik";
    text-decoration: underline;
    font-size: 10px;
  }

  .checkboks {
    position: relative;
    padding-left: 25px;
    cursor: pointer;
    display: block;
    user-select: none;
    color: var(--color-gray-20);
    font-family: "Rubik";
    font-size: 10px;
    margin-right: 100px;
  }

  .checkboks input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
  }

  .checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 20px;
    width: 20px;
    background-color: transparent;
    border-radius: 15px;
    border: 1px solid var(--color-gray-20);
  }

  .checkboks:hover input ~ .checkmark {
    background-color: var(--color-gray-20);
  }

  .checkboks input:checked ~ .checkmark {
    background: var(--color-red-300);
  }

  .checkboks input:checked ~ .checkmark:after {
    display: block;
  }
</style>
